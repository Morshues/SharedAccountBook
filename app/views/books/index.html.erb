
<% @books.each do |book| %>
  <%= link_to book.name, book_token_path(book.token) %>
  <br>
<% end %>

<hr>

<%= form_for current_user.books.new, url: books_path, remote: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <%= f.label :currency_name %>
  <%= f.text_field :currency_name, value: 'USD' %>
  
  <%= link_to t('cancel'), books_path %>
  <%= f.submit %>
<% end %>

<hr>

<%= link_to t('home.signout'), destroy_user_session_path, :method => :delete %>

